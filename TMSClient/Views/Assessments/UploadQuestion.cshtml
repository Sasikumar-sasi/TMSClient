@model TMSClient.Models.ViewModel.AssessmentViewModel

@{
    ViewData["Title"] = "UploadQuestion";
    Layout = "~/Views/Shared/_Trainer.cshtml";
}

<h1>UploadQuestion</h1>

<h4>AssessmentViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="UploadQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssessmentName" class="control-label"></label>
                <input asp-for="AssessmentName" class="form-control" />
                <span asp-validation-for="AssessmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingTime" class="control-label"></label>
                <input asp-for="StartingTime" class="form-control" />
                <span asp-validation-for="StartingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndingTime" class="control-label"></label>
                <input asp-for="EndingTime" class="form-control" />
                <span asp-validation-for="EndingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BatchID" class="control-label"></label>
                <input asp-for="BatchID" class="form-control" />
                <span asp-validation-for="BatchID" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="QuestionFile" class="control-label"></label>
                <div class="custome-file">
                <input asp-for="QuestionFile" class="form-control custom-file-input" />
                <label class="custome-file-lable">Choose file...</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

