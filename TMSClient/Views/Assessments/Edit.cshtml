@model TMSClient.Models.ViewModel.AssessmentViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Trainer.cshtml";
}
<h4>Question Upload</h4>
<p>If question is uploaded trainee's will download this Question</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssessmentName" class="control-label"></label>
                <input asp-for="AssessmentName" class="form-control" readonly/>
                <span asp-validation-for="AssessmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" readonly />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" readonly/>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingTime" class="control-label"></label>
                <input asp-for="StartingTime" class="form-control" readonly />
                <span asp-validation-for="StartingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndingTime" class="control-label"></label>
                <input asp-for="EndingTime" class="form-control" readonly/>
                <span asp-validation-for="EndingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BatchID" class="control-label"></label>
                <input asp-for="BatchID" class="form-control" readonly />
                <span asp-validation-for="BatchID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuestionFile" class="control-label"></label>
                <div class="custome-file">
                <input asp-for="QuestionFile" class="form-control custom-file-input" />
                <label class="custome-file-lable">Choose file...</label>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Upload Question" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function(){
        $('.custom-file-input').on("change",function(){
            var FileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-lable').html(FileName);
        });
    })
    
    </script>
}

<div>
    <a asp-action="DashBoard" asp-controller="Trainers">Back to Dash Board</a>
</div>

