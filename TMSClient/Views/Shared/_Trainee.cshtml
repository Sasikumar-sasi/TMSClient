@inject IHttpContextAccessor Accessor;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TMSClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-vapor.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TMSClient.styles.css" asp-append-version="true" />



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/images/logo.jfif" alt="KUMARAN SYSTEMS" width="170" height="75" asp-append-version="true">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Trainees" asp-action="DashBoard">Dash Board</a>
                        </li>

                        
                        <li>
                        <div class="dropdown">
                            <button type="button" class="nav-link text-dark dropdown-toggle  btn-sm" style="border:none" data-bs-toggle="dropdown">
                                Assessment
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("View Your Assessment", "ViewAssessment", "Trainees",null, new { @class = "dropdown-item" })</li>
                                
                            </ul>
                        </div>
                        </li>

                         <li>
                        <div class="dropdown">
                            <button type="button" class="nav-link text-dark dropdown-toggle  btn-sm" style="border:none" data-bs-toggle="dropdown">
                                Scores
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("View All Scores", "ViewAssessmentScores", "Trainees",null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </div>
                        </li>
                    </ul>
                   @if(Accessor.HttpContext.Session.GetString("EmailID").ToString() != null)
            {
                <div style="margin-right:7%">
                    <form class="d-flex">
                        <div class="dropdown">
                            <button type="button" class="btn btn-primary dropdown-toggle btn-sm" data-bs-toggle="dropdown">
                                @Accessor.HttpContext.Session.GetString("EmailID").ToString()
                            </button>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Update My Profile", "Edit", "Trainees", new { id = Convert.ToInt32(Accessor.HttpContext.Session.GetString("ID")) }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </div>
                    </form>
                    
                </div>
                }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TMSClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
