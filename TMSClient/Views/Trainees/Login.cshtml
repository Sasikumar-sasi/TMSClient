@model TMSClient.Models.Trainee
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2  align="center">Welcome to Kumaran System</h2>
<div>
    <br />
    <h3 >Trainee Login</h3>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Trainees">
            <div class="form-group">
                <label asp-for="EmailID" class="control-label">Email</label>
                <input asp-for="EmailID" class="form-control" />
                <span asp-validation-for="EmailID" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <input type="submit" value="login" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <label>@Html.Raw(ViewBag.Message)</label>
            <label>@Html.Raw(ViewBag.User)</label>
        </form>
    </div>
</div>