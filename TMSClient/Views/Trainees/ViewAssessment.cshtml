@model IEnumerable<TMSClient.Models.Assessment>

@{
    ViewData["Title"] = "ViewAssessment";
    Layout = "~/Views/Shared/_Trainee.cshtml";
}
<div class="text-center">
    <h3 align="center" style="font-size:30px">These assessments are assigned to you!!!</h3>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.AssessmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            
            <td>
               
                @Html.ActionLink("Download Question", "Download","Assessments", new {  fileName=item.Question}) <br>
             @Html.ActionLink("Upload Answer", "Create","Answers", new { id=item.AssessmentID}) 
                
                
            </td>
        </tr>
}
    </tbody>
</table>
