
@{
    ViewData["Title"] = "DashBoard";
    Layout = "~/Views/Shared/_TrainerManager.cshtml";
}

<h1>DashBoard</h1>


<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
  <button type="button" class="btn btn-success">Batchs</button>
  <div class="btn-group" role="group">
    <button id="btnGroupDrop2" type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
    <div class="dropdown-menu" aria-labelledby="btnGroupDrop2" style="">
      <a class="dropdown-item" asp-area="" asp-controller="Batchs" asp-action="Index">View Batchs</a>
      <a class="dropdown-item" asp-area="" asp-controller="Batchs" asp-action="Create">Add Batch</a>
    </div>
  </div>
</div>


<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
  <button type="button" class="btn btn-success">Assessments</button>
  <div class="btn-group" role="group">
    <button id="btnGroupDrop2" type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
    <div class="dropdown-menu" aria-labelledby="btnGroupDrop2" style="">
      <a class="dropdown-item" asp-area="" asp-controller="Assessments" asp-action="Create">Schedule New Assessment</a>
      <a class="dropdown-item" asp-area="" asp-controller="Assessments" asp-action="Index">View All Assessments</a>
    </div>
  </div>
</div>
