@model IEnumerable<TMSClient.Models.Batch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TrainerManager.cshtml";
}

<div class="text-center">
    <h3 align="center" style="font-size:30px">Batch information</h3>
</div>
<hr />
<table class="table table-primary table-border table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BatchID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BatchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stream)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BatchID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stream)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.BatchID}) |
                
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
