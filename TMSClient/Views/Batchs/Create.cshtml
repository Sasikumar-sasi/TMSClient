@model TMSClient.Models.Batch

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_TrainerManager.cshtml";
}

<div class="text-center">
    <h3 align="center" style="font-size:25px">Upload new batch informations</h3>
    
</div>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="display:none" class="form-group">
                <label asp-for="BatchID" class="control-label"></label>
                <input asp-for="BatchID" class="form-control" />
                <span asp-validation-for="BatchID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BatchName" class="control-label"></label>
                <input asp-for="BatchName" class="form-control" />
                <span asp-validation-for="BatchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stream" class="control-label"></label>
               @* <input asp-for="Stream" class="form-control" />*@
               <select asp-for="Stream" class="form-control">
                   <option value="null">---Select---</option>
                   <option value="null">Java</option>
                   <option value="null">c# and .NET Programming</option>
                   <option value="null">Python</option>
                   <option value="null">Angular</option>
                   <option value="null">Testing</option>
                   <option value="null">Node.js</option>

                   
               </select>
                <span asp-validation-for="Stream" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="TrainerID" class="control-label"></label>
                <input asp-for="TrainerID" class="form-control" />
                <span asp-validation-for="TrainerID" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="TrainerID" class="control-label"></label>
                <select asp-for="TrainerID" class ="form-control" asp-items="ViewBag.TrainerName"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

