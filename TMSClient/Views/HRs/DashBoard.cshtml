@inject IHttpContextAccessor Accessor;
@{
    ViewData["Title"] = "DashBoard";
    Layout = "~/Views/Shared/_Hr.cshtml";
}


<div class="text-center">
   <div class="alert alert-success alert-dismissible">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <strong>@Accessor.HttpContext.Session.GetString("EmailID").ToString()!</strong> Welcome
</div>
</div>
<div class="text-center">
   <div class="alert alert-warning alert-dismissible">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <strong>Update!</strong> Please update your profile
</div>
</div>



<div class="row" style="margin-top:5%">
        <div class="col-xl-3 col-sm-4 mb-5">
            <div class="bg-white rounded shadow-sm py-5 px-3"><img src="~/images/trainee.jpg" alt="" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                <h5 class="mb-0">Trainees</h5><span class="small text-uppercase text-muted">Interns</span>
                <ul class="social mb-0 list-inline mt-3">
                    <li class="list-inline-item"><a class="btn btn-primary btn-block" asp-area="" asp-controller="Trainees" asp-action="Create">Add Trainee</a></li>
                    <li style="margin-top:2%" class="list-inline-item"><a class="btn btn-primary btn-block" asp-area="" asp-controller="Hrs" asp-action="AllTrainees">View Trainees</a></li>
                </ul>
            </div>
        </div>
        <div  class="col-xl-3 col-sm-4 mb-5">
            <div class="bg-white rounded shadow-sm py-5 px-3"><img src="~/images/trainer.jpg" alt="" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                <h5 class="mb-0">Trainer</h5><span class="small text-uppercase text-muted">Technical Trainer</span>
                <ul class="social mb-0 list-inline mt-3">
                    <li class="list-inline-item"><a class="btn btn-primary btn-block" asp-area="" asp-controller="Trainers" asp-action="Create">Add Trainer</a></li>
                    <li style="margin-top:2%" class="list-inline-item"><a class="btn btn-primary btn-block" asp-area="" asp-controller="Hrs" asp-action="AllTrainers">View Trainers</a></li>
                </ul>
            </div>
        </div>
        <div  class="col-xl-3 col-sm-4 mb-5">
            <div class="bg-white rounded shadow-sm py-5 px-3"><img src="~/images/tm.jfif" alt="" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                <h5 class="mb-0">Trainer Manager</h5><span class="small text-uppercase text-muted">Technical Trainer</span>
                <ul class="social mb-0 list-inline mt-3">
                    <li class="list-inline-item"><a class="btn btn-primary btn-block" asp-area="" asp-controller="TrainerManagers" asp-action="Create">Add Trainer Manager</a></li>
                    <li style="margin-top:2%" class="list-inline-item"><a class="btn btn-primary btn-block" asp-area="" asp-controller="Hrs" asp-action="AllTrainerManager">View Trainer Manager</a></li>
                </ul>
            </div>
        </div>

        </div>