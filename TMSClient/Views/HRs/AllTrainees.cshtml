@model IEnumerable<TMSClient.Models.Trainee>
@inject IHttpContextAccessor Accessor;
@{
    ViewData["Title"] = "AllTrainees";
    Layout = "~/Views/Shared/_Hr.cshtml";
}

<div class="text-center">
    <h3 align="center" style="font-size:30px">Full information About Trainee's joined in our organization</h3>
</div>

<table class="table table-primary table-border table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TraineeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillSet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationQualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailID)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Batchs.BatchName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillSet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationQualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailID)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.BatchID)
            </td>
            @if (Accessor.HttpContext.Session.GetString("Role").Equals("HR"))
                {

                    <td>
                        @Html.ActionLink("Delete", "Delete","Trainers", new { id=item.TraineeID })
            </td>
            }
        </tr>
}
    </tbody>
</table>
